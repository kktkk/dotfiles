set autoindent
set backspace=start,eol,indent
set encoding=utf-8
set expandtab
set history=2000
set ignorecase
set incsearch
set laststatus=2
set mouse=
set nocompatible
set shiftwidth=4
set smartindent
set softtabstop=2
set statusline=%F%r%h%=
set undofile
set whichwrap=b,s,[,],<,>,~

syntax on
filetype plugin indent on

set fileencodings=iso-2022-jp,euc-jp,sjis,utf-8
scriptencoding=utf-8
set shortmess=a

if &compatible
  set nocompatible
endif

